{
  "name": "metronomejs",
  "version": "1.1.5",
  "description": "Node & Browser wrappers for Metronome Token",
  "author": "Ignacio Anaya <ignaciol@bloq.com>",
  "main": "./src/index.js",
  "browser": "./dist/metronome.min.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --colors -p",
    "dev": "webpack --progress --colors --watch",
    "lint": "eslint ./src --ext .js",
    "lint:fix": "eslint ./src --fix .js",
    "precommit": "npm run lint",
    "prepublishOnly": "npm run build && npm run precommit && npm run prepush && tag-matches"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MetronomeToken/metronomejs.git"
  },
  "keywords": [
    "js",
    "node",
    "browser",
    "token",
    "metronome"
  ],
  "bugs": {
    "url": "https://github.com/MetronomeToken/metronomejs/issues"
  },
  "homepage": "https://github.com/MetronomeToken/metronomejs#readme",
  "dependencies": {
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "check-tag-matches": "^1.0.0",
    "cross-env": "^5.1.0",
    "eslint": "^4.19.1",
    "eslint-config-bloq": "^1.2.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsdoc": "^3.6.3",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prefer-arrow": "^1.1.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "npm-check": "^5.7.0",
    "pre-commit": "^1.2.2",
    "webpack": "^3.8.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
